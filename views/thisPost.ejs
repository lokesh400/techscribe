<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= post.title %> - TeamUp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans leading-relaxed text-gray-800">

  <div class="max-w-4xl mx-auto px-6 py-10">

    <!-- Post Header -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
      <h1 class="text-3xl font-bold text-blue-700 mb-2"><%= post.title %></h1>
      <p class="text-gray-700 mb-4"><%= post.description %></p>
      <p class="text-sm text-gray-600">
        <span class="font-medium text-gray-800">Skills Needed:</span>
        <span class="italic"><%= post.skillsNeeded.join(', ') %></span>
      </p>
    </div>

    <!-- Application Form -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-10">
      <h2 class="text-2xl font-semibold text-green-700 mb-4">Apply to this post</h2>
      <form action="/posts/<%= post._id %>/apply" method="POST" class="space-y-4">
        <textarea
          name="message"
          placeholder="Write your message here..."
          required
          class="w-full h-32 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400"
        ></textarea>
        <button
          type="submit"
          class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded transition duration-200"
        >
          Submit Application
        </button>
      </form>
    </div>

    <!-- Applications List -->
    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-xl font-bold text-gray-800 mb-4">Applicants</h3>

      <% if (applications.length === 0) { %>
        <p class="text-gray-500 italic">No one has applied yet. Be the first!</p>
      <% } %>

      <% applications.forEach(app => { %>
        <div class="border-b border-gray-200 pb-4 mb-4">
          <p class="font-semibold text-blue-700"><%= app.applicant.name %></p>
          <p class="text-gray-700 mt-1"><%= app.message %></p>
        </div>
      <% }) %>
    </div>

  </div>

</body>
</html>
