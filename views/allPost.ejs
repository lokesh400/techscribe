<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TeamUp</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background-color: #f7fafc;
    }
  </style>
</head>
<body class="bg-gray-50 text-gray-900 font-sans leading-relaxed p-6">

  <div class="container mx-auto px-4 sm:px-6 md:px-8">
    <!-- Header Section -->
    <header class="mb-8 text-center">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-blue-600">Available Team-Up Posts</h1>
      <p class="text-lg text-gray-600 mt-2">Collaborate on exciting projects and grow together.</p>
      <a href="/new/post" class="mt-6 inline-block bg-blue-600 text-white py-3 px-8 rounded-xl shadow-lg hover:bg-blue-700 transition duration-300 ease-in-out">Create New Post</a>
    </header>

    <!-- Posts Section -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% posts.forEach(post => { %>
        <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition duration-300 ease-in-out">
          <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= post.title %></h2>
          <p class="text-gray-700 mb-4"><%= post.description %></p>
          <p class="text-sm text-gray-500">Skills: <%= post.skillsNeeded.join(', ') %></p>
          <a href="/posts/<%= post._id %>" class="mt-4 inline-block text-blue-600 hover:underline">View & Apply</a>
        </div>
      <% }) %>
    </div>

  </div>
</body>
</html>
