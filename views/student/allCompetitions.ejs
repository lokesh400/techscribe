<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Competitions</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-6">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-6">Available Competitions</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% competitions.forEach(competition => { %>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <h2 class="text-xl font-semibold mb-2"><%= competition.title %></h2>
          <p class="text-gray-600 mb-4"><%= competition.description %></p>
          <p class="text-sm text-gray-500">Team Size: <%= competition.teamSize %></p>
          <p class="text-sm text-gray-500">Members: <%= competition.minMembers %> - <%= competition.maxMembers %></p>
          <a href="/competition/<%= competition._id %>" class="text-blue-500 hover:underline mt-4 inline-block">View Details</a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
