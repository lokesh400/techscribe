<!-- views/competitionDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= competition.title %> - Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 p-6">
  <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-center mb-4"><%= competition.title %></h1>
    <p class="text-lg mb-4"><%= competition.description %></p>
    <p class="mb-4">Team Size: <%= competition.teamSize %> | Members: <%= competition.minMembers %> - <%= competition.maxMembers %></p>

    <h2 class="text-2xl font-semibold mt-8">Prizes</h2>
    <% competition.prizes.forEach(prize => { %>
      <div class="bg-gray-50 p-4 mt-4 rounded-lg shadow-sm">
        <h3 class="text-xl font-semibold"><%= prize.title %></h3>
        <p><%= prize.description %></p>
        <p><strong>Amount:</strong> <%= prize.amount %> <strong>Type:</strong> <%= prize.type %></p>
      </div>
    <% }) %>

    <h2 class="text-2xl font-semibold mt-8">create Team</h2>
    <form action="/create/team/apply/<%= competition.id %>" method="POST">
      <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg">Apply to Team</button>
    </form>

    <h2 class="text-2xl font-semibold mt-8">Join A Team</h2>
    <form action="/search/already/team/apply/<%= competition.id %>" method="POST">
      <input type="text" name="teamName" placeholder="...enter team name...">
      <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg">Search</button>
    </form>
  </div>
</body>
</html>
